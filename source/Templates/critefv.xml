<?xml version="1.0" encoding="utf-8" ?>
<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates" version="1.0.0">
    <template name="critefv" invoke="auto">
        <description>
             Create as Equals TCriteria(Field, Value)
        </description>
        <point name="FieldName">
            <text>
                FieldName
            </text>
            <hint>
                FieldName
            </hint>
        </point>
        <point name="ValueType">
            <text>
                Integer
            </text>
            <hint>
                ValueType
            </hint>
        </point>
        <point name="Value">
            <text>
                Value
            </text>
            <hint>
                Value type: Integer String, Date, Time...
            </hint>
        </point>
        <author>
           Freedom Solucôes em TI
        </author>
        <script>
          InvokeCodeCompletion
        </script>
        <code language="Delphi" context="methodbody" delimiter="|">
            <![CDATA[TCriteria.CreateAsEqual(TFieldArgument.Create('|FieldName|'), TValueArgument.CreateAs|ValueType|(|Value|))]]>
		</code>
	</template>
</codetemplate>